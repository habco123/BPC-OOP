<Window x:Class="CalcWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalcWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="Operand1TextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="50,50,0,0"/>
        <TextBox x:Name="Operand2TextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="200,50,0,0"/>

        <ComboBox x:Name="OperationComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="50,100,0,0">
            <ComboBoxItem Content="plus" />
            <ComboBoxItem Content="minus" />
            <ComboBoxItem Content="krat" />
            <ComboBoxItem Content="deleno" />
        </ComboBox>

        <Button Content="Vypočítat" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="50,150,0,0" Click="OnCalculateClick"/>

        <TextBlock x:Name="ResultTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,150,0,0" FontSize="16"/>
    </Grid>
</Window>
